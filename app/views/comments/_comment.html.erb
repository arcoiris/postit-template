<% show_post ||= false %>
<div class="row">
	<div class="well span8">
		<%= comment.body %>
		<% if show_post %>
			<i>on</i> <%= link_to Post.find(comment.post_id).title, post_path(comment.post_id) %>
		<% end %>
		<br/>
		by <%= link_to("#{comment.user.username}", user_path(comment.user))%> at <%= comment.created_at %>
	</div>
</div>