<% if @post.errors.any? %>
	<div class="alert alert-danger">
		 The following <%= pluralize(@post.errors.count, "errors") %> prevented this post from saving:
		<ul>
		<% @post.errors.full_messages.each do |msg| %> 
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %> 

<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %> 
	<%= f.label :url %>
	<%= f.text_field :url %>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br/>
	<%= f.submit "Create Post", class: "btn btn-primary" %>
<% end %> 